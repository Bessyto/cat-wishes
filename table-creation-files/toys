CREATE TABLE toys (
    id INT(3) AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(20) NOT NULL,
    description VARCHAR(200) NOT NULL,
    recommendation INT(4) NOT NULL,
    image VARCHAR(200)
);

